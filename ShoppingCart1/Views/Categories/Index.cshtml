@model IEnumerable<ShoppingCart1.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}

<h1 style="color:darkblue">Category</h1>

<p>
    @Html.ActionLink("Add New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Display)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Display)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Category_Id }) |
            |
            @Html.ActionLink("Delete", "Delete", new { id = item.Category_Id })
        </td>
    </tr>
}

</table>
